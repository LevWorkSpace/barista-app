<aura:component controller="ProductSearchController" description="ProductSearch">
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:attribute name="open" type="Boolean" default="false"/>
    <aura:attribute name="sections" type="List" description="accordionSections"/>

    <aura:handler name="productSelected" event="c:ProductSelected" action="{!c.handleProductSelected}"/>
    <c:CustomToast aura:id="customToast"/>

    <div style="{!v.open ? '' : 'display:none'}">
        <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open slds-modal_large" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close" alternativeText="close" onclick="{!c.closePopup}" size="large"
                                          class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse"/>

                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Select Products</h2>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <aura:iteration items="{!v.sections}" var="section">
                        <c:CollapsibleSection title="{!section.name}">
                            <lightning:layout multipleRows="true" class="slds-grid">
                                <aura:iteration items="{!section.products}" var="product">
                                    <lightning:layoutItem class="slds-m-right_xxx-small">
                                        <c:ProductTile product="{!product}"/>
                                    </lightning:layoutItem>
                                </aura:iteration>
                            </lightning:layout>
                        </c:CollapsibleSection>
                    </aura:iteration>
                </div>
                <footer class="slds-modal__footer slds-grid slds-grid_align-center">
                    <lightning:button label="Done" onclick="{!c.closePopup}" variant="brand" class="slds-p-around_medium"/>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
</aura:component>